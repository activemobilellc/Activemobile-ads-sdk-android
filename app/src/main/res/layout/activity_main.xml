<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context=".MainActivity">

<!--    <com.wizz.testapp.Banner-->
<!--        android:id="@+id/Banner"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="100dp"></com.wizz.testapp.Banner>-->

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/Image_Banner"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="40dp"
                android:text="Test Image Banner"/>

            <Button
                android:id="@+id/Text_Banner"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="40dp"
                android:text="Test Text Banner"/>

            <Button
                android:id="@+id/Redirect_Ad"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="40dp"
                android:text="Test Redirect Ad"/>

            <Button
                android:id="@+id/Apps_Ad"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="40dp"
                android:text="Test Apps Ad"/>

            <Button
                android:id="@+id/Video_Ad"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="40dp"
                android:text="Test Video Ad"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>